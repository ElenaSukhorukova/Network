<h1 class='md-4'><%= t("devise.registrations.new.sign_up") %></h1>
<div class='col-sm-5'>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false } ) do |f| %>
    <%= f.input :email, autofocus: true, input_html: { autocomplete: "email", class: 'mb-2' } %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, input_html: { autocomplete: "new-password", class: 'mb-2' } %>
    <%= f.input :password_confirmation, input_html: { autocomplete: "new-password", class: 'mb-2'} %>

    <div class="actions mt-2 mb-2">
    <%= f.button :submit, t("devise.registrations.new.sign_up"), class: "btn btn-primary mt-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
