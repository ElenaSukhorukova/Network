<% provide :page_title, t("devise.passwords.edit.change_your_password") %>
<% currently_at %>

<h1 class='md-4'><%= t("devise.passwords.edit.change_your_password") %></h1>
<div class='col-sm-5'>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), 
    html: { method: :put }, data: { turbo: false }) do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.input :password, autofocus: true, autocomplete: "new-password", 
        label: t("devise.passwords.edit.new_password") %>
      <%= f.input :password_confirmation, autocomplete: "new-password", 
        label: t("devise.passwords.edit.confirm_new_password") %>

    <div class="actions mt-2 mb-2">
      <%= f.button :submit, t("devise.passwords.edit.change_my_password"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
