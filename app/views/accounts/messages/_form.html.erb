<%= simple_form_for model, method: method do |f| %>
  <%= f.input :body, label: false, placeholder: attribute_model(f.object, :body) %>
  <%= f.button :submit, class: "btn btn-outline-dark mt-2" %>
  <%= render partial: 'shared/cancel_button', locals: { path: path } if f.object.persisted? %>
<% end %>