<% provide :page_title, t("devise.unlocks.new.resend_unlock_instructions") %>
<% currently_at %>

<h1 class='md-4'><%= t("devise.unlocks.new.resend_unlock_instructions") %></h1>
<div class='col-sm-5'>
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), 
    html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
    
    <div class="actions mt-2 mb-2">
      <%= f.button :submit, t("devise.unlocks.new.resend_unlock_instructions"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>