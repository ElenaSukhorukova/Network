<h3><%= i18n_model_name(@account) %></h3>
        <%# if @account.avatar.attached? %>
          <%#= image_tag @account.avatar, width: '200px', class: "rounded mx-auto d-block" %>
        <%# else %>
        <%#= image_tag "blank_pictures/blank_avatar.png", width: '200px' %>
        <%# end %>
<p>
  <b><i><%= attribute_model(@account, :user_name) %> </i></b><%= @account.user_name %><br />
  <b><i><%= attribute_model(@account, :gender) %> </i></b><%= @account.gender %><br />
  <b><i><%= attribute_model(@account, :date_birthday) %> </i></b><%= I18n.l(@account.date_birthday, format: '%d %B %Y') %><br />
  <b><i><%= attribute_model(@account, :country) %> </i></b><%= @account.country %><br />
  <b><i><%= attribute_model(@account, :about_oneself) %> </i></b><%= @account.about_oneself %><br />
  <b><i><%= attribute_model(@account, :visibility) %> </i></b><%= @account.visibility %><br />
  <b><i><%= attribute_model(@account, :state) %> </i></b><%= @account.state %><br />
</p>

<% if @account.user_id == current_user.id %>
  <%= link_to(edit_account_path(@account), class: "btn btn-light", role: 'button', title: t('link.edit', model: i18n_model_name(@account).downcase)) do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-text" viewBox="0 0 16 16">
      <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z"></path>
      <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"></path>
    </svg>
  <% end %>
  <%= button_to(account_path(@account), method: :delete, :onclick => "return confirm('Are you sure?')", 
    :remote => true, title: t('submit.delete', model: i18n_model_name(@account).downcase), class: "btn btn-light") do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
      <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"></path>
    </svg>
  <% end %>
<% else %>
  <%= link_to 'Send a message', '#', class: "btn btn-light", role: 'button' %>
  <%= button_to t('page.account.send_invite'), account_invites_path(@account), method: :post, class: "btn btn-light", role: 'button' %>
<% end %>