<%= simple_form_for model, method: method do |f| %>
  <%= f.input :body, label: false, placeholder: attribute_model(f.object, :body),
                                    input_html: { rows: 4 } %>
	<%= f.button :submit, f.object.new_record? ? t('submit.create', model: i18n_model_name(f.object).downcase) 
                                              : t('submit.edit', model: i18n_model_name(f.object).downcase), 
                                              class: "btn btn-outline-dark my-2 btn-sm" %>	
  <%= render partial: 'shared/cancel_button', 
    locals: { path: account_conversation_path(current_user.account, f.object.conversation) } if f.object.persisted? %>
<% end %>