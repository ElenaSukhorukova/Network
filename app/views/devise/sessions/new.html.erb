<% provide :page_title, t("devise.sessions.new.sign_in") %>
<% currently_at t("navbar.sign_in") %>

<article class="article">
  <h2 class='mt-4 mb-2'><%= t("devise.sessions.new.sign_in") %></h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), 
      html: { method: :post }, data: { turbo: false }, :validate => true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :email, autofocus: true, input_html: { autocomplete: "email", class: 'mb-2' } %>
    <%= f.input :password, input_html: { autocomplete: "current-password", class: 'mb-2' } %>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, as: :check_boxes %>
      <%= f.label :remember_me %>
    <% end %>
    <div class='action my-2'>
      <%= f.submit :submit, class: "btn btn-outline-dark my-2 btn-sm" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</article>
