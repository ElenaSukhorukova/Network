<% provide :page_title, t("devise.unlocks.new.resend_unlock_instructions") %>
<% currently_at %>

<article class="article">
  <h2 class='mt-4 mb-2'><%= t("devise.unlocks.new.resend_unlock_instructions") %></h2>
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), 
      html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
      
    <div class="actions my-2">
      <%= f.button :submit, t("devise.unlocks.new.resend_unlock_instructions"), 
          class: "btn btn-outline-dark my-2 btn-sm"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</article>