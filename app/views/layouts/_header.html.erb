<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container ps-5">
    <%# <div class="container"> %>
      <%= link_to t("page.site_name"), root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to t("navbar.about_us"), about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.rules"), rules_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.contacts"), contacts_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
            <%= link_to t("navbar.sign_out"), sign_out_path, 'data- turbo_method': :delete, 
              :onclick => "return confirm('Are you sure?')", :remote => true, class: "nav-link" %>
          <% else %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= t('page.entrance') %>
              </a>
              <ul class="dropdown-menu text-center">
                <li><%= link_to t("navbar.sign_in"), sign_in_path, class: "dropdown-item" %></li>
                <li><%= link_to t("navbar.sign_up"), sign_up_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    <%# </div> %>
  </nav>
</header>