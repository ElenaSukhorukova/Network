<% provide :page_title, t("devise.passwords.edit.change_your_password") %>
<% currently_at %>

<article class="article">
  <h2 class='mt-4 mb-2'><%= t("devise.passwords.edit.change_your_password") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), 
      html: { method: :put }, data: { turbo: false }) do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.input :password, autofocus: true, autocomplete: "new-password", 
        label: t("devise.passwords.edit.new_password") %>
    <%= f.input :password_confirmation, autocomplete: "new-password", 
        label: t("devise.passwords.edit.confirm_new_password") %>

    <div class="actions my-2">
      <%= f.button :submit, t("devise.passwords.edit.change_my_password"), 
          class: "btn btn-outline-dark my-2 btn-sm" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</article>
